type User {
  id: ID! @id
  nom: String!
  avatar: String
  prenom: String!
  numero: String! @unique
  createdAt: DateTime! @createdAt
  channels: [Channel!]! @relation(link: INLINE)
  offerings: [Offering!]! @relation(link: INLINE)
  messages: [Message!]! @relation(link: INLINE)
}
type Offering {
  id: ID! @id
  type: String!
  category: String!
  description: String!
  author: User! 
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}
type Channel {
  id: ID! @id
  users: [User!]!
  messages: [Message!]! @relation(link: INLINE)
  createdAt: DateTime! @createdAt
}
type Message {
  id: ID! @id
  text: String!
  sentBy: User! 
  channel: Channel!
  createdAt: DateTime! @createdAt
}
